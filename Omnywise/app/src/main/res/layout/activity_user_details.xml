<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omniwyse.firdous.view.details.UserDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primary_dark_color"
        >


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_5"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ivImage"
            app:layout_constraintEnd_toEndOf="@id/ivImage"
            app:layout_constraintTop_toBottomOf="@+id/ivImage"
            android:layout_marginTop="@dimen/dp_5"
            tools:text="Firdous Shahani "
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/roboto_medium"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clHeader"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:text="@string/followers"
        android:textColor="@color/color_common_text_dark"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFollowersLink"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvFollowers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clHeader"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        tools:text="@string/followers"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFollowersLink"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:text="@string/subscription"
        android:textColor="@color/color_common_text_dark"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubscriptionLink"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvSubscription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFollowersLink"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        tools:text="@string/subscription"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        android:textColorLink="@android:color/holo_blue_dark"
        android:autoLink="web"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrganization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubscriptionLink"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="@string/organization"
        android:textColor="@color/color_common_text_dark"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrganizationLink"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvOrganization"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubscriptionLink"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_16"
        tools:text="@string/organization"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        android:textColorLink="@android:color/holo_blue_dark"
        android:autoLink="web"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrganizationLink"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:text="@string/repos"
        android:textColor="@color/color_common_text_dark"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvReposLink"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvRepos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrganizationLink"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_16"
        tools:text="@string/repos"
        android:textSize="@dimen/sp_14"
        android:fontFamily="@font/roboto_medium"
        android:textColorLink="@android:color/holo_blue_dark"
        android:autoLink="web"
        />

</androidx.constraintlayout.widget.ConstraintLayout>